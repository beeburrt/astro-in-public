---
import Link from "../components/Link.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page Not Found">
  <div
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    <div>
      <h1 class="h1">Welp, this is awkward!</h1>
      <p>We seem to have misplaced something...</p>
    </div>
    <Link
      text="Back To Home!"
      href="/"
      style="secondary"
      icon={{
        name: "radix-icons:rocket",
        side: "right",
      }}
      borderVisible={true}
    />
  </div>
</MainLayout>
